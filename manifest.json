{
  "manifest_version": 3,
  "name": "Shortcut to URL",
  "description": "Navigate to pre-configured URLs using keyboard shortcuts",
  "version": "1.0.0",
  "permissions": ["storage", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Shortcut to URL"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Period",
        "mac": "Command+Period"
      },
      "description": "Open shortcut popup"
    }
  },
  "options_page": "options.html"
}
