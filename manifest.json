{
  "manifest_version": 3,
  "name": "Shortcut to URL",
  "description": "Navigate to pre-configured URLs using keyboard shortcuts with automatic URL redirects",
  "version": "1.1.0",
  "permissions": ["storage", "tabs", "webNavigation", "alarms"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Shortcut to URL",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Period",
        "mac": "Command+Period"
      },
      "description": "Open shortcut popup"
    }
  },
  "options_page": "options.html"
}
